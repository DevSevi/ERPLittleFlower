@page "/kunden"
@using ERPLittleFlowerBlazor.Data
@using LittleFlowerERP.Models
@using Microsoft.EntityFrameworkCore
@inject ERPLittleFlowerBlazor.Data.AppDbContext _context

<h3>Kunden</h3>

@if (kunden == null)
{
    <p><em>LÃ¤dt...</em></p>
}
else if (!kunden.Any())
{
    <p>Keine Kunden vorhanden.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>KundeID</th>
                <th>Name</th>
                <th>Adresse</th>
                <th>Telefonnummer</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var k in kunden)
            {
                <tr @onclick="() => NavigateToKunde(k.KundeID)" style="cursor:pointer">
                    <td>@k.KundeID</td>
                    <td>@k.Name</td>
                    <td>@k.Adresse</td>
                    <td>@k.Telefonnummer</td>
                    <td>@k.Email</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Kunde> kunden = new List<Kunde>();

    [Inject]
    private AppDbContext Db { get; set; }

    [Inject]
    private NavigationManager Nav { get; set; }

    protected override async Task OnInitializedAsync()
    {
        kunden = await Db.Kunden.ToListAsync();
    }

    private void NavigateToKunde(int kundenID)
    {
        Nav.NavigateTo($"/kunde/{kundenID}");
    }
}